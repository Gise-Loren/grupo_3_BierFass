            <a href="#">> Variedades</a>
        </div>
        <p class="title">CERVEZAS</p>

        <p class="cervezas">CERVEZA ARTESANAL</p>

        <article class="variedades">
            <div class="_variedades">
                <% artesanales.forEach(producto=> { %>
                    <div class="producto">
                        <div class="img-cerveza-bier">
                            <img src="<%= producto.img %>" alt="andes-rubia">
                        </div>
                        <p class="nombre-producto">
                            <%= producto.name %> $<%= producto.price %>
                        </p>
                       
                        <div class="agregar">
                            <a href="/products/<%= producto.id %>" style="text-decoration: none"> <button class="boton-comprar" style="text-decoration: none"> AGREGAR </button></a>
                        </div>
                    </div>
                    <% }) %>

            </div>

        </article>

        <p class="cervezas ">CERVEZAS INDUSTRIALES</p>

        <article class="variedades">
            <div class="_variedades">
                <% industriales.forEach(producto=> { %>
                    <div class="producto">
                        <div class="img-cerveza-bier">
                            <img src="<%= producto.img %>" alt="andes-rubia">
                        </div>
                        <p class="nombre-producto">
                            <%= producto.name %> $<%= producto.price %>
                        </p>

                        <div class="agregar">
                            <a href="/products/<%= producto.id %>" style="text-decoration: none" > <button class="boton-comprar" style="text-decoration: none"> AGREGAR </button></a>
                        </div>
                    </div>
                    <% }) %>
            </div>
            
        </article>
    </main>

    <%- include('partials/footer')%>

