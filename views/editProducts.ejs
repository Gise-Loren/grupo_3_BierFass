    display: flex;
    justify-content: center;
    align-items: center;
    font-size: .7rem;
    width: 6rem;
    height: 22px;
    background-color: rgb(218, 165, 32);
    border-color: rgb(218, 165, 32);
    border-radius: 25px;
    color: black;
    border-style: none;
    margin: auto;
    font-weight: bold;
    font-size: 12px;
    transition: 500ms;

}

.categoria {
    width: 30%;
}

.box-categoria {
    display: flex;
}

textarea {
    width: 85%;
    margin-bottom: 5px;
    margin-left: 40px;
}

/* -----------------query------------------- */
